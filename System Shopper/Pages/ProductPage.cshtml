<div class="container">

    
    <!--Product List-->
    <div style="border-style: solid; border-color: #1D2F6F" class="row mb-3 p-2 rounded">
        <div class="col-sm-3">
            <img style="width: 200px;" class="img-fluid" src="@Model.ExistingProduct.ProductImage" alt="Product Image" /> <!-- Manufacturer image goes here -->
        </div>
        <!-- Product Information -->
        <div class="col-sm-8">
            <!-- Product Name and Price-->
            <div class="row">
                <div class="col-sm-9">
                    <h4>@Model.ExistingProduct.ProductName</h4>
                </div>
                <div class="col-sm-3">
                    <h3>$<b>@Model.ExistingProduct.Price</b></h3>
                </div>
            </div>
            <!-- Product Bio -->
            <div class="row">
                <div class="col-sm-8">
                    @Model.ExistingProduct.ProductDescription
                </div>
            </div>
            <!-- Product Manufacturer -->
            <!--<div class="row">
                <div class="col-sm-8">
                    \product.ProductDescription
                </div>
            </div>-->
        </div>
        <!-- Edit and Delete Buttons-->
        <div style="border-left-style: solid; border-color: #8390FA; display: block; align-items: stretch;" class="col-sm-1 px-1">
            <div class="row">
                <div class="col-sm-12">
                    <a style="background-color: #FAC748;" asp-page="EditProduct" asp-route-id="@Model.ExistingProduct.ProductId" class="btn mb-3">
                        <i class="bi bi-pencil mx-1"></i>Edit
                    </a>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12">
                    <a asp-page="DeleteProduct" asp-route-id="@Model.ExistingProduct.ProductId" class="btn btn-danger">
                        <i class="bi bi-x-circle mx-1"></i>Delete
                    </a>
                </div>
            </div>
        </div>
    </div>
    <div>
        <a style="background-color: #FAC748;" class="btn" asp-page="Index">Back</a>
    </div>
</div>
